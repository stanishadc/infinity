@model InfinityWeb.ViewModel.GroupViewModal
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">Groups</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a>Home</a></li>
                            <li class="breadcrumb-item active">Edit Group</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        @if (TempData["errorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade-show">
                @TempData["errorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
            </div>
        }
        @if (TempData["successMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade-show">
                @TempData["successMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
            </div>
        }
        <div class="alert alert-success">
            <form asp-action="Update" method="post" asp-controller="Group">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade-show"></div>
                <div class="row">
                    <input type="hidden" asp-for="GroupId" />
                    <div class="col-lg-3">
                        <div class="mb-3">
                            <label asp-for="GroupTypeId" class="form-label">Group Type<span class="AsteriskRed">*</span></label>
                            <select asp-for="GroupTypeId"
                                    class="form-select"
                                    asp-items="@(new SelectList(Model.GroupTypesList,"Value", "Text"))">
                            </select>
                            <span asp-validation-for="GroupTypeId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="mb-3">
                            <label asp-for="GroupName" class="form-label">Group<span class="AsteriskRed">*</span></label>
                            <input type="text" class="form-control" asp-for="GroupName" name="GroupName" placeholder="Enter Group">
                            <span asp-validation-for="GroupName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Address</label>
                            <input type="text" class="form-control" asp-for="Address" name="Address" placeholder="Enter Address">
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="hstack gap-2 justify-content-end mb-3 mt-4">
                            <button type="submit" class="btn btn-success">Update Changes</button>
                            <a asp-action="Index" asp-controller="Group" class="btn btn-primary">Close</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>
