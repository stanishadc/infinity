@model InfinityWeb.ViewModel.CollectorBranchViewModal
<div id="DeleteCollectorBranch-@Model.BranchId" class="modal fade" aria-hidden="true" aria-labelledBy="DeleteCollectorBranch">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 overflow-hidden">
            <div class="modal-header p-3">
                <h4 class="card-title mb-0">Delete Collector Branch</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Delete" method="post" asp-controller="CollectorBranch">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade-show"></div>
                    <input type="hidden" asp-for="BranchId" />
                    <p>Are you sure to delete this Collector Branch?</p>
                    <div class="text-end">
                        <button type="submit" class="btn btn-success">Delete</button>
                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
