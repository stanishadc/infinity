@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}
@model Login
<!-- auth-page content -->
<div class="auth-page-content overflow-hidden pt-lg-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-12 col-xl-5">
                <div class="card overflow-hidden">
                    <div class="row g-0">
                        <div class="col-lg-12">
                            <div class="p-lg-5 p-4">
                                <div>
                                    <h5 class="text-primary">Welcome Back !</h5>
                                    <p class="text-muted">Sign in to continue to Infinity.</p>
                                </div>
                                @if (TempData["errorMessage"] != null)
                                {
                                    <div class="alert alert-danger">
                                        @TempData["errorMessage"]
                                    </div>
                                }
                                @if (TempData["successMessage"] != null)
                                {
                                    <div class="alert alert-success">
                                        @TempData["successMessage"]
                                    </div>
                                }
                                <div class="mt-4">
                                    <form asp-action="Login">
                                        <div class="mb-3">
                                            <label for="email" class="form-label">Email</label><span class="AsteriskRed">*</span>
                                            <input type="text" class="form-control" asp-for="Email" placeholder="Enter Email">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="mb-3">
                                            <div class="float-end">
                                                <a href="auth-pass-reset-cover.html" class="text-muted">Forgot password?</a>
                                            </div>
                                            <label class="form-label" for="password-input">Password</label><span class="AsteriskRed">*</span>
                                            <div class="position-relative auth-pass-inputgroup mb-3">
                                                <input type="password" class="form-control pe-5 password-input" placeholder="Enter password" id="password-input" asp-for="Password">
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                                <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon" type="button" id="password-addon"><i class="ri-eye-fill align-middle"></i></button>
                                            </div>
                                        </div>
                                        <div class="mt-4">
                                            <button class="btn btn-success w-100" type="submit">Sign In</button>
                                        </div>
                                    </form>
                                </div>
                                <div class="mt-5 text-center">
                                    <p class="mb-0">Don't have an account ? <a asp-action="Register" class="fw-semibold text-primary text-decoration-underline"> Signup</a> </p>
                                </div>
                            </div>
                        </div>
                        <!-- end col -->
                    </div>
                    <!-- end row -->
                </div>
                <!-- end card -->
            </div>
            <!-- end col -->

        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</div>
<!-- end auth page content -->
<!-- footer -->
<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-center">
                    <p class="mb-0">
                        &copy;
                        <script>document.write(new Date().getFullYear())</script> Inifinity.
                    </p>
                </div>
            </div>
        </div>
    </div>
</footer>
<!-- end Footer -->
