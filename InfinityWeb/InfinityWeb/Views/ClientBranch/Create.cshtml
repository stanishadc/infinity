@model InfinityWeb.ViewModel.ClientBranchViewModal
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">Client Branches</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a>Home</a></li>
                            <li class="breadcrumb-item active">New Client Branch</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        @if (TempData["errorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade-show">
                @TempData["errorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
            </div>
        }
        @if (TempData["successMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade-show">
                @TempData["successMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
            </div>
        }
        <div class="alert alert-success">
            <form asp-action="Create" method="post" asp-controller="ClientBranch">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade-show"></div>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="mb-3">
                            <label asp-for="ClientId" class="form-label">Client<span class="AsteriskRed">*</span></label>
                            <select asp-for="ClientId"
                                    class="form-select"
                                    asp-items="@(new SelectList(Model.ClientsList,"Value", "Text"))">
                            </select>
                            <span asp-validation-for="ClientId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="mb-3">
                            <label asp-for="BranchName" class="form-label">Branch<span class="AsteriskRed">*</span></label>
                            <input type="text" class="form-control" asp-for="BranchName" name="BranchName" placeholder="Enter Branch Name">
                            <span asp-validation-for="BranchName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="mb-3">
                            <label asp-for="PrimaryContact" class="form-label">Primary Contact<span class="AsteriskRed">*</span></label>
                            <input type="text" class="form-control" asp-for="PrimaryContact" name="PrimaryContact" placeholder="Enter Primary Contact">
                            <span asp-validation-for="PrimaryContact" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email<span class="AsteriskRed">*</span></label>
                            <input type="text" class="form-control" asp-for="Email" name="Email" placeholder="Enter Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Phone<span class="AsteriskRed">*</span></label>
                            <input type="text" class="form-control" asp-for="Phone" name="Phone" placeholder="Enter Phone">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Address</label>
                            <input type="text" class="form-control" asp-for="Address" name="Address" placeholder="Enter Address">
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="mb-3">
                            <label asp-for="CollectionNotes" class="form-label">Collection Notes</label>
                            <input type="text" class="form-control" asp-for="CollectionNotes" name="CollectionNotes" placeholder="Enter Collection Notes">
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="hstack gap-2 justify-content-end mb-3 mt-4">
                            <button type="submit" class="btn btn-success">Save Changes</button>
                            <a asp-action="Index" asp-controller="ClientBranch" class="btn btn-primary">Close</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
